#!/usr/bin/perl
if( $ARGV[0] eq '-h' || $ARGV[0] eq '-help' || $ARGV[0] eq '--help')
{
help();
exit;
}
sub help {
    print "\n=== ref_upd_gaussian_frc - Gaussian Force Integration ===\n\n";
    print "PURPOSE:\n";
    print "  Add Gaussian forces to existing .ref files.\n";
    print "  Essential for integrating Gaussian QM forces into AFMTools workflows.\n\n";
    print "USAGE:\n";
    print "  ref_upd_gaussian_frc gaussian_forces_file [file.ref]\n";
    print "  ref_upd_gaussian_frc forces.dat system.ref > updated.ref\n\n";
    print "PARAMETERS:\n";
    print "  gaussian_forces_file - Gaussian forces file (from gaussian_extract_frc)\n";
    print "  file.ref            - Existing .ref file (optional, reads from stdin if not provided)\n\n";
    print "INPUT:\n";
    print "  - Gaussian forces file with force data in Hartree/Bohr\n";
    print "  - Existing .ref file with coordinates and current forces\n\n";
    print "OUTPUT:\n";
    print "  - Updated .ref file with added Gaussian forces to stdout\n\n";
    print "DETAILS:\n";
    print "  - Adds QM forces from Gaussian calculations to the .ref file force field\n";
    print "  - Unit conversion: 627.5095/0.5291772083 (Hartree/Bohr → kcal/mol/Å)\n";
    print "  - Adds Gaussian contributions to existing forces in .ref file\n";
    print "  - Preserves NetF and Torq entries unchanged\n";
    print "  - Processes atoms sequentially in file order\n\n";
    print "UNIT CONVERSION:\n";
    print "  - Gaussian forces in Hartree/Bohr\n";
    print "  - Output forces in kcal/mol/Å\n";
    print "  - Conversion factor: 627.5095/0.5291772083\n";
    print "  - Standard conversion for quantum chemistry to molecular mechanics\n\n";
    print "FORCE FILE FORMAT:\n";
    print "  - Input: fx fy fz (one line per atom, Hartree/Bohr)\n";
    print "  - Generated by gaussian_extract_frc script\n";
    print "  - Must have same atom order as .ref file\n";
    print "  - Three force components per atom\n\n";
    print "EXAMPLES:\n";
    print "  gaussian_extract_frc qm.out | ref_upd_gaussian_frc /dev/stdin system.ref > updated.ref\n";
    print "  ref_upd_gaussian_frc forces.dat initial.ref > step2.ref\n\n";
    print "TYPICAL WORKFLOW:\n";
    print "  1. Generate initial: ref_gen_step1_cord molinfo coords.xyz > step1.ref\n";
    print "  2. Extract forces: gaussian_extract_frc qm.out > forces.dat\n";
    print "  3. Add forces: ref_upd_gaussian_frc forces.dat step1.ref > step2.ref\n";
    print "  4. Calculate net: ref_upd_net step2.ref > final.ref\n\n";
    print "ERROR HANDLING:\n";
    print "  - Dies if forces file cannot be opened\n";
    print "  - Atom count must match between forces file and .ref file\n";
    print "  - Forces file must contain numeric data\n\n";
    print "SEE ALSO:\n";
    print "  gaussian_extract_frc - Extract forces from Gaussian output\n";
    print "  ref_upd_net         - Calculate net forces and torques\n";
    print "  ref_gen_step1_cord  - Generate initial .ref files\n\n";
}

$conv=627.5095/0.5291772083;
$bnk="     ";

open(PQSG,"$ARGV[0]") || die "can not open $ARGV[0]\n";
shift;

$i=0;
while(<PQSG>){
($fxx[$i],$fyy[$i],$fzz[$i]) = split;
$i++;
}

$_=<>;print;
$_=<>;print;
$i=0;
while(<>)
{
($nam,$xxx,$yyy,$zzz, $frx, $fry, $frz, $solv, $molnam)=split;
unless (($nam eq "NetF") | ($nam eq "Torq")){

print $nam.$bnk.$xxx.$bnk.$yyy.$bnk.$zzz.$bnk;
printf "%12.7f$bnk%12.7f$bnk%12.7f",$frx+$fxx[$i]*$conv,$fry+$fyy[$i]*$conv,$frz+$fzz[$i]*$conv;
print $bnk.$solv.$bnk.$molind.$molnam."\n";

$i++;
}
else { print;}

}



