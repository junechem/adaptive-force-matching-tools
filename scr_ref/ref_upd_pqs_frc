#!/usr/bin/perl
if( $ARGV[0] eq '-h' || $ARGV[0] eq '-help' || $ARGV[0] eq '--help')
{
help();
exit;
}
sub help {
    print "\n=== ref_upd_pqs_frc - PQS Force Integration ===\n\n";
    print "PURPOSE:\n";
    print "  Add PQS forces to existing .ref files.\n";
    print "  Essential for integrating PQS QM forces into AFMTools workflows.\n\n";
    print "USAGE:\n";
    print "  ref_upd_pqs_frc pqs_forces_file [file.ref]\n";
    print "  ref_upd_pqs_frc forces.dat system.ref > updated.ref\n\n";
    print "PARAMETERS:\n";
    print "  pqs_forces_file - PQS forces file (from pqs_extract_frc)\n";
    print "  file.ref        - Existing .ref file (optional, reads from stdin if not provided)\n\n";
    print "INPUT:\n";
    print "  - PQS forces file with force data\n";
    print "  - Existing .ref file with coordinates and current forces\n\n";
    print "OUTPUT:\n";
    print "  - Updated .ref file with PQS force contributions added to stdout\n\n";
    print "DETAILS:\n";
    print "  - Adds PQS forces to existing forces in .ref file\n";
    print "  - Unit conversion: 627.5095/0.5291772083 (Hartree/Bohr → kcal/mol/Å)\n";
    print "  - Skips first line of PQS force file (header)\n";
    print "  - Preserves NetF and Torq entries unchanged\n";
    print "  - Processes atoms sequentially in file order\n";
    print "  - Handles 'end' markers in PQS force files\n\n";
    print "UNIT CONVERSION:\n";
    print "  - PQS forces in Hartree/Bohr\n";
    print "  - Output forces in kcal/mol/Å\n";
    print "  - Conversion factor: 627.5095/0.5291772083\n";
    print "  - Standard conversion for quantum chemistry to molecular mechanics\n\n";
    print "PQS FORCE FILE FORMAT:\n";
    print "  - Generated by pqs_extract_frc script\n";
    print "  - Contains header and force data\n";
    print "  - Format: fx fy fz (one line per atom)\n";
    print "  - May contain 'end' marker lines\n\n";
    print "EXAMPLES:\n";
    print "  pqs_extract_frc calculation.out | ref_upd_pqs_frc /dev/stdin system.ref > updated.ref\n";
    print "  ref_upd_pqs_frc forces.dat step1.ref > step2.ref\n\n";
    print "TYPICAL WORKFLOW:\n";
    print "  1. Generate initial: ref_gen_step1_cord molinfo coords.xyz > step1.ref\n";
    print "  2. Extract forces: pqs_extract_frc pqs.out > forces.dat\n";
    print "  3. Add forces: ref_upd_pqs_frc forces.dat step1.ref > step2.ref\n";
    print "  4. Calculate net: ref_upd_net step2.ref > final.ref\n\n";
    print "SEE ALSO:\n";
    print "  pqs_extract_frc    - Extract forces from PQS output\n";
    print "  ref_upd_net        - Calculate net forces and torques\n";
    print "  ref_gen_step1_cord - Generate initial .ref files\n\n";
}

$conv=627.5095/0.5291772083;
$bnk="     ";

open(PQSG,"$ARGV[0]") || die "can not open $ARGV[0]\n";
shift;

$_=<PQSG>;

$i=0;
while(<PQSG>){
($fxx[$i],$fyy[$i],$fzz[$i]) = split;
$i++;
}
# the last line is "end"; the script assumes these non-numbers convert to 0.0;

$_=<>;print;
$_=<>;print;
$i=0;
while(<>)
{
($nam,$xxx,$yyy,$zzz, $frx, $fry, $frz, $solv, $molnam)=split;
unless (($nam eq "NetF") | ($nam eq "Torq")){

print $nam.$bnk.$xxx.$bnk.$yyy.$bnk.$zzz.$bnk;
printf "%12.7f$bnk%12.7f$bnk%12.7f",$frx+$fxx[$i]*$conv,$fry+$fyy[$i]*$conv,$frz+$fzz[$i]*$conv;
print $bnk.$solv.$bnk.$molind.$molnam."\n";

$i++;
}
else { print;}

}



